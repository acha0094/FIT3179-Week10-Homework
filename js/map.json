{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Malaysia COVID-19 Total Deaths as of 19 September 2022",
        "align": "center",
        "anchor": "middle"
    },
    "width": 800,
    "height": 400,
    "params": [
        {
            "name": "zoom_level",
            "value": 2800,
            "bind": {
                "input": "range",
                "min": 2800,
                "max": 15000,
                "step": 100,
                "name": "Zoom: "
            }
        },
        {
            "name": "center_to",
            "value": [108.26, 4],
            "bind": {
                "input": "select",
                "options": [
                    [108.26, 4],
                    [101.8, 3],
                    [111.8, 4.8]
                ],
                "labels": ["Malaysia", "Kuala Lumpur", "East Malaysia"],
                "name": "Map Centre: "
            }
        },
        {
            "name": "Deaths_Above",
            "value": 0,
            "bind": {
                "input": "range",
                "min": 0,
                "max": 10000,
                "step": 500,
                "name": "Minimum Deaths: "
            }
        }
            
    ],
    "projection": {
        "type": "mercator",
        "center": {"expr": "center_to"},
        "scale": {"expr": "zoom_level"}
    },
    "data": {
        "url": "js/malaysia.json",
        "format": {"type": "topojson", "feature": "states"}
    },
    "transform": [
        {
            "lookup": "properties.Name",
            "from": {
                "data": {
                    "url": "data/epidemic/total_deaths_state.csv"
                },
                "key": "state",
                "fields": ["total_deaths", "population"]
            }
        },
        {"calculate": "datum.total_deaths/datum.population * 10000", "as": "Deaths per 10,000 Population"},
        {"filter": "datum.total_deaths > Deaths_Above"}
    ],
    "layer": [
        {
            "data": {
                "url": "js/malaysia.json",
                "format": {"type": "topojson", "feature": "states"}
            },
            "mark": {
                "type": "geoshape",
                "fill": "white",
                "stroke": "black",
                "strokeWidth": 0.4
            }
        },
        {
            "mark": {
                "type": "geoshape",
                "stroke": "black",
                "strokeWidth": 0.4
            },
            "encoding": {
                "color": {
                    "field": "Deaths per 10,000 Population",
                    "type": "quantitative",
                    "scale": {"type": "log"}
                },
                "tooltip": [
                    {"field": "properties.Name", "type": "nominal", "title": "State"},
                    {"field": "population", "type": "quantitative", "title": "Population"},
                    {"field": "total_deaths", "type": "quantitative", "title": "Total Deaths"},
                    {"field": "Deaths per 10,000 Population", "type": "quantitative", "format": ".2f"}
                ]
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "right",
                "baseline": "middle",
                "dx": -12,
                "fontSize": 12,
                "fontStyle": "italic"
            },
            "encoding": {
                "x": {"value": 150},
                "y": {"value": 210},
                "text": {"field": "properties.Name", "type": "nominal"},
                "color": {"value": "black"},
                "opacity": {
                    "condition": {
                        "test": "datum['properties.Name'] == 'Pahang'",
                        "value": 1
                    },
                    "value": 0
                }
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "right",
                "baseline": "middle",
                "dx": -12,
                "fontSize": 12,
                "fontStyle": "italic"
            },
            "encoding": {
                "x": {"value": 550},
                "y": {"value": 275},
                "text": {"field": "properties.Name", "type": "nominal"},
                "color": {"value": "black"},
                "opacity": {
                    "condition": {
                        "test": "datum['properties.Name'] == 'Sarawak'",
                        "value": 1
                    },
                    "value": 0
                }
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "right",
                "baseline": "middle",
                "dx": -12,
                "fontSize": 12,
                "fontStyle": "italic"
            },
            "encoding": {
                "x": {"value": 720},
                "y": {"value": 130},
                "text": {"field": "properties.Name", "type": "nominal"},
                "color": {"value": "black"},
                "opacity": {
                    "condition": {
                        "test": "datum['properties.Name'] == 'Sabah'",
                        "value": 1
                    },
                    "value": 0
                }
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "right",
                "baseline": "middle",
                "dx": -12,
                "fontSize": 12,
                "fontStyle": "italic"
            },
            "encoding": {
                "x": {"value": 190},
                "y": {"value": 295},
                "text": {"field": "properties.Name", "type": "nominal"},
                "color": {"value": "black"},
                "opacity": {
                    "condition": {
                        "test": "datum['properties.Name'] == 'Johor'",
                        "value": 1
                    },
                    "value": 0
                }
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "right",
                "baseline": "middle",
                "dx": -12,
                "fontSize": 12,
                "fontStyle": "italic"
            },
            "encoding": {
                "x": {"value": 72},
                "y": {"value": 180},
                "text": {"field": "properties.Name", "type": "nominal"},
                "color": {"value": "black"},
                "opacity": {
                    "condition": {
                        "test": "datum['properties.Name'] == 'Perak'",
                        "value": 1
                    },
                    "value": 0
                }
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "right",
                "baseline": "middle",
                "dx": -12,
                "fontSize": 12,
                "fontStyle": "italic"
            },
            "encoding": {
                "x": {"value": 129},
                "y": {"value": 155},
                "text": {"field": "properties.Name", "type": "nominal"},
                "color": {"value": "black"},
                "opacity": {
                    "condition": {
                        "test": "datum['properties.Name'] == 'Kelantan'",
                        "value": 1
                    },
                    "value": 0
                }
            }
        }
    ]
}
